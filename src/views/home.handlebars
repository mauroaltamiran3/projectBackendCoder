<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">Inicio</a>
        <a class="navbar-brand" href="/realtimeproducts">Productos en Tiempo Real</a>
        <a class="navbar-brand" href="/products">Productos Paginados</a>
    </div>
</nav>

{{#each products}}
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{this.image}}" class="img-fluid rounded-start" alt="{{this.title}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">Descripción: {{this.description}}</p>
                    <p class="card-text">Categoría: {{this.category}}</p>
                    <p class="card-text text-primary">Precio: ${{this.price}}</p>
                </div>
            </div>
        </div>
    </div>
{{/each}}